<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BinIt - Payment</title>
    <link rel="stylesheet" href="pay.css">
</head>

<body>
    <section class="head"> 
        <div class="headnav">
            <ul class="navbar">
                <li>
                    <a href="bookingsystem.ejs" class="logo">
                        <img src="<%= logoImagePath %>" width="100px" height="100px" alt="Website Logo">
                    </a>
                </li>

                <li><a href="#home">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="faq.ejs">FAQs</a></li>
                <li><a href="#contact">Contact</a></li>

                <li>
                    <img src="<%= userIconPath %>" width="20px"/>
                </li>

                <li class="profile-icon" onclick="toggleMenu()">
                    <img src="<%= profileImagePath %>" width="50px" alt="Profile Icon"/>
                </li>
            </ul>
        </div>

        <div id="sideMenu" class="side-menu">
            <button class="close-btn" onclick="toggleMenu()">&times;</button>
            <ul>
                <li>
                    <img src="<%= notificationIconPath %>" width="20px"/>
                    <a href="#">Notifications</a>
                </li>

                <li>
                    <img src="<%= settingsIconPath %>" width="20px"/>
                    <a href="#">Settings</a>
                </li>

                <li>
                    <img src="<%= logoutIconPath %>" width="20px"/>
                    <a href="#">Logout</a>
                </li>
                <li><a href="request.ejs" class="request-button">Request</a></li>
            </ul>
        </div>
    </section>

    <section class="payment-container">
        <h2 style="color: green;">Select a Payment Method</h2>
        <form id="payment-form" action="<%= paymentFormAction %>" method="POST" onsubmit="return validateForm(event)">
            <div class="payment-option">
                <input type="radio" id="visa" name="payment" value="visa" onclick="toggleCardDetails()">
                <label for="visa">
                    <img src="<%= visaIconPath %>" width="20px" alt="Visa"> 
                </label>
            </div>

            <div id="card-details" style="display: none;">
                <label for="card-number">Card Number:</label>
                <input type="text" id="card-number" name="card-number" placeholder="1234 5678 9012 3456" required>

                <label for="expiry-date">Expiry Date:</label>
                <input type="month" id="expiry-date" name="expiry-date" required>

                <label for="cvv">CVV:</label>
                <input type="text" id="cvv" name="cvv" placeholder="123" required>

                <label for="otp">Enter OTP (if required):</label>
                <input type="text" id="otp" name="otp" placeholder="Enter OTP">

                <label for="coupon">Coupon Code (Optional):</label>
                <input type="text" id="coupon" name="coupon" placeholder="Enter Coupon Code">
            </div>
            <button type="submit" class="btn">Proceed to Pay</button>
        </form>
    </section>

    <footer>
        <section class="footer">
            <div class="footer-2">
                <div class="footer-1">
                    <a href="bookingsystem.ejs" class="logo">
                        <img src="<%= logoImagePath %>" width="100px" height="100px" alt="Website Logo">
                    </a>
                </div>
                <div class="footer-contact">
                    <h4>Contact us</h4>
                    <div class="contact-icons">
                        <p><i class="fa fa-map-marker"></i> <%= contactAddress %></p>
                        <p><i class="fa fa-phone"></i> <%= contactPhone %></p>
                        <p><i class="fa fa-envelope"></i> <%= contactEmail %></p>
                    </div>
                </div>
                <div class="footer-payment">
                    <h4>Payment Gateway</h4>
                    <div class="payment-icons">
                        <% paymentIcons.forEach(function(icon) { %>
                            <img src="<%= icon %>" />
                        <% }); %>
                    </div>
                </div>
            </div>
        </section>
    </footer>

    <script src="booking.js"></script>
</body>

</html>
